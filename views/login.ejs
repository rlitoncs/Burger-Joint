<body>
    <%- include('partials/_login') %>
      
    <!-- Header -->
    <section class="login">
      <div class="login-title">
        <h1>Login</h1>
      </div>

      <!-- Login Form -->
      <form method="POST" action="/login">

        <!-- Email -->
        <div class="email">
          <input class="email" name="email" placeholder="user@example.com" type="email">
        </div>

        <!-- Password -->
        <div class="password">
          <input class="password" name="password" placeholder="Password" type="password">
        </div>

        <!-- Login Button -->
        <div>
          <button class="login-btn" type="submit">Login</button>
        </div>
      </section>
    </form>

