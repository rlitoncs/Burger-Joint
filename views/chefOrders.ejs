<body>
  <%- include('partials/_login') %>
  <main class="chef-orders-container">
    <button id="customers-btn">customers</button>
    <h2 class="chef-orders-title">Orders Table</h2>
    <section class="chef-orders-table">
      <table>
        <tr>
          <th> Order ID </th>
          <th> Customer Name </th>
          <th> Total Amount </th>
          <th> Pick Up Time </th>
          <th> Created at </th>
        </tr>
        <% for (let row of order) { %>
        <tr>
          <div class="chef-order-data">
            <td><%= row.id %></td>
            <td><%= row.first_name %> <%= row.last_name %></td>
            <td>$<%= row.total_amount %></td>
            <td>  
              <form method="POST" action="/chefOrders/<%= row.id %>">
                <input type="time" id="pick_up_time" name="pick_up_time" value="<%=row.pick_up_time%>">
                <input type="hidden" id="customer_id" name="customer_id" value="<%=row.customer_id%>">
                <input type="hidden" id="customer_first_name" name="customer_first_name" value="<%=row.first_name%>">
                <input type="hidden" id="customer_last_name" name="customer_last_name" value="<%=row.last_name%>">
                <button id="pick_up_time" type="submit"> Submit </button>
              </form>
              
            <td><%= row.created_at %></td>
            
          </div>
        </tr>
      <% } %>
      </table>
    </section>
  </main>

</body>
